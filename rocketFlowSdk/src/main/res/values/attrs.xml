<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RoundImageView Custom Styling -->
    <declare-styleable name="RoundImageView">
        <attr name="tt_border_width" format="dimension" />
        <attr name="tt_border_color" format="color" />
        <attr name="tt_border_overlay" format="boolean" />
    </declare-styleable>
    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable
        name="Toggle">

        <attr
            name="textOn"
            format="string"/>

        <attr
            name="textOff"
            format="string"/>

        <attr
            name="colorOff"
            format="color"/>

        <attr
            name="colorOn"
            format="color"/>

        <attr
            name="colorBorder"
            format="color"/>

        <attr
            name="colorDisabled"
            format="color"/>

        <attr name="on"
            format="boolean"/>

        <attr name="android:textSize"/>

        <attr name="android:enabled"/>
    </declare-styleable>
</resources>