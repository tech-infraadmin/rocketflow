<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimen_0">

    <LinearLayout
        android:id="@+id/ll_topbar"
        android:background="@color/toggleOff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNavigationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            app:srcCompat="@drawable/menu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/cardSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/llqrcode"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/testHello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello,"
                        style="@style/TextViewStyle"
                        android:textColor="@color/white"
                        android:fontFamily="@font/campton_book"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingLeft="@dimen/dimen_10"
                        android:textSize="14sp"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/textName"
                        android:paddingLeft="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pravin"
                        style="@style/TextViewStyle"
                        android:textColor="@color/white"
                        android:fontFamily="@font/campton_book"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAlignment="textStart" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerTaskCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:layout_toLeftOf="@+id/ivSpinnerTriangle"
                        android:background="@color/transparent"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/ivSpinnerTriangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/dimen_10"
                        app:srcCompat="@drawable/ic_down_triangle" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llqrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/llfilter"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivScanQrCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/qr_code" />
            </LinearLayout>

            <LinearLayout
                android:layout_toStartOf="@id/llToggle"
                android:id="@+id/llfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:gravity="end">

                <com.tracki.utils.toggle.widget.LabeledSwitch
                    android:id="@+id/switch_toggle"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_30"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>