        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_15"
                android:background="@drawable/bg_white_round"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:text="Device Change Detected"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:textColor="@color/red_dark5"
                    style="@style/TextViewStyleBold"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_android_phone"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/dimen_90"
                    android:layout_height="@dimen/dimen_100"/>

                <TextView
                    android:id="@+id/tv_change_message"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/dimen_15"
                    tools:text="Message"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:padding="@dimen/dimen_5"/>


                <Button
                    android:id="@+id/btn_proceed_change"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_20"
                    android:text="@string/proceed"
                     />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
