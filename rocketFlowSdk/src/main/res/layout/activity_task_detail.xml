<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tracki.ui.taskdetails.TaskDetailActivity">

    <data>

        <variable
            name="viewModel"
            type="com.tracki.ui.taskdetails.TaskDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:cardCornerRadius="@dimen/dimen_0"
                app:cardElevation="@dimen/dimen_4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/ivNavigationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_10"
                        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                    <TextView
                        android:id="@+id/toolbarTitleNew"
                        style="@style/TextViewStyle"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivNavigationIcon"
                        android:fontFamily="@font/campton_book"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:id="@+id/llSync"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSyncStatus"
                            android:layout_marginRight="@dimen/dimen_4"
                            android:text="Syncing.."
                            android:visibility="gone"
                            android:textColor="@color/green" />

                        <RelativeLayout
                            android:id="@+id/rlSyncing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_4"
                            android:visibility="visible">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_shape"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="65"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                            <TextView
                                android:id="@+id/tvSynProgress"
                                style="@style/TextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textSize="@dimen/text_size_10" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>
        <!--android:background="@color/white"-->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">






            <!-- Adding bottom sheet after main content -->
            <include
                android:id="@+id/bottomSheetTrip"
                layout="@layout/bottom_sheet_task_detail"
                android:visibility="visible"
                app:viewModel="@{viewModel}" />

            <include
                android:id="@+id/bottomSheetTimeline"
                layout="@layout/bottom_sheet_timeline"
                android:visibility="gone" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>