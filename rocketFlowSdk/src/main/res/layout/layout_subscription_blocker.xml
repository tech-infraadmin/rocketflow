<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="9.9dp"
        android:layout_marginVertical="19.9dp"
        app:cardBackgroundColor="@color/colorPrimaryLib"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_2"
        app:cardUseCompatPadding="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0.1dp"
            android:layout_marginVertical="0.1dp"
            app:cardCornerRadius="@dimen/dimen_5"
            app:cardElevation="@dimen/dimen_2"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:layout_marginVertical="@dimen/dimen_50"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subs_title"
                    style="@style/TextViewStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_expired_title"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_150"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:src="@drawable/subscription_expired"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/tv_sub_message"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_70"
                    android:justificationMode="inter_word"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/text_size_17"
                    tools:ignore="UnusedAttribute"
                    tools:text="@string/subscription_expired" />

                <Button
                    android:id="@+id/btn_sub_pay"
                    style="@style/ButtonStyleMoreRounded"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_60"
                    android:text="@string/subscribe" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>