<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

<!--        <variable-->
<!--            name="slotAdapter"-->
<!--            type="SlotAdapter" />-->

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_0"
        android:elevation="@dimen/dimen_8"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dimen_4"
        tools:ignore="UnusedAttribute">
    <LinearLayout
        android:padding="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewStyleBold"
                android:textSize="@dimen/text_size_10"
                android:text="@string/preferred_date_and_time"/>

            <Spinner
                android:layout_weight="1.4"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/Places"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            style="@style/TextViewStyle"
            android:text="@string/when_would_you_like_technician_to_visit"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:manager="LinearLayoutManager"
            tools:listitem="@layout/date_day_card"
            tools:itemCount="10"/>

        <TextView
            style="@style/TextViewStyle"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/around_what_time_would_you_like_technician_to_visit"/>

        <GridView
            android:id="@+id/gv_slot"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dimen_3"
            android:verticalSpacing="@dimen/dimen_2"
            tools:itemCount="9"
            android:scrollbars="none"
            tools:listitem="@layout/time_card"/>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>