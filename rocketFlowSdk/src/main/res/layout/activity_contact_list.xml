<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="com.tracki.ui.addbuddy.ContactAdapter" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.tracki.ui.addbuddy.ContactListActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.40"
                    android:padding="@dimen/dimen_10"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:layout_weight="2.2"
                    android:background="@drawable/et_mobile_number_search"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="@dimen/dimen_10"
                    android:paddingLeft="@dimen/dimen_6"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvClear"
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_weight="0.40"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="@dimen/dimen_6"
                    android:text="@string/clear" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adapter="@{adapter}"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/layout_row_show_contact" />
        </LinearLayout>
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/contentProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/AppTheme.BlackAccent"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
