<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="@dimen/dimen_1"
                android:color="@color/light_blue_5" />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
            <corners android:radius="@dimen/dimen_8"/>
        </shape>
    </item>
    <item>

        <bitmap
            android:gravity="end"
            android:src="@drawable/down_filled_triangular_arrow" />
    </item>
</layer-list>